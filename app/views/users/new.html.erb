<h2>Sign Up</h2>

<ul>
<% @user.errors.full_messages.each do |message| %>
  <li><%= message %></li>
<% end %>
</ul>

<%= form_with model: @user, local: true  do |f| %>
  
  <%= f.label :name %>
  <%= f.text_field :name %>

  <br>

  <%= f.label :email %>
  <%= f.text_field :email %>
  
  <br>

  <%= f.label :password %>
  <%= f.password_field :password %>
  
  <br>

  <%= f.label :password_confirmation %>
  <%= f.password_field :password_confirmation %>
  
  <br><br>

  <%= f.submit %>

<% end %>
