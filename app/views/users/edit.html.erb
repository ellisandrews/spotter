<h2>Edit Profile</h2>

<%= render partial: 'messages/model_errors', locals: { model: @user } %>

<%= form_with model: @user, local: true  do |f| %>
  
  <%= f.label :first_name %>
  <%= f.text_field :first_name %>

  <br>

  <%= f.label :last_name %>
  <%= f.text_field :last_name %>

  <br>

  <%= f.label :email %>
  <%= f.text_field :email, disabled: true %>
  
  <br><br>

  <%= f.submit 'Update' %>

<% end %>
