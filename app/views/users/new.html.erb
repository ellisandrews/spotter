<h2 class="py-3">Sign Up</h2>

<%= render partial: 'messages/model_errors', locals: { model: @user } %>

<%= form_with model: @user, local: true  do |f| %>

  <div class="form-group row">
    <%= f.label :first_name, class: "col-2 col-form-label" %>
    <div class="col-3">
      <%= f.text_field :first_name, class: "form-control" %>
    </div>
  </div>

  <div class="form-group row">
    <%= f.label :last_name, class: "col-2 col-form-label" %>
    <div class="col-3">
      <%= f.text_field :last_name, class: "form-control" %>
    </div>
  </div>

  <div class="form-group row">
    <%= f.label :username, class: "col-2 col-form-label" %>
    <div class="col-3">
      <div class="input-group">
        <div class="input-group-prepend">
          <div class="input-group-text">@</div>
        </div>
        <%= f.text_field :username, class: "form-control" %>
      </div>
    </div>
  </div>

  <div class="form-group row">
    <%= f.label :email, class: "col-2 col-form-label" %>
    <div class="col-3">
      <%= f.text_field :email, class: "form-control" %>
    </div>
  </div>
  
  <div class="form-group row">
    <%= f.label :password, class: "col-2 col-form-label" %>
    <div class="col-3">
      <%= f.password_field :password, class: "form-control" %>
    </div>
  </div>

  <div class="form-group row">
    <%= f.label :password_confirmation, class: "col-2 col-form-label" %>
    <div class="col-3">
      <%= f.password_field :password_confirmation, class: "form-control" %>
    </div>
  </div>

  <div class="py-3">
    <%= f.submit 'Sign Up', class: "btn btn-primary" %>
  </div>

<% end %>

<div class="py-3">
  <p>Already have an account? <%= link_to "Log in", login_path %>.</p>
</div>
