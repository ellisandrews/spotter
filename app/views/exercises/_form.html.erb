<%= render partial: 'messages/model_errors', locals: { model: exercise } %>

<%= form_with model: exercise, local: true do |f| %>
  
  <%= f.label :name %>
  <%= f.text_field :name %>

  <br>

  <%= f.label :image_url %>
  <%= f.text_field :image_url %>

  <br>

  <%= f.label :description %>
  <%= f.text_area :description %>
    
  <br>

  <label>Muscles</label>
  <%= f.collection_check_boxes :muscle_ids, muscles, :id, :name %>

  <br><br>

  <%= f.submit %>

<% end %>
