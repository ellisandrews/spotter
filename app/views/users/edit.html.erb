<h2 class="px-5 py-3">Edit Profile</h2>

<div class="px-5">

  <%= render partial: 'messages/model_errors', locals: { model: @user } %>

  <div class="py-3">
    <%= form_with model: @user, local: true  do |f| %>
      
      <div class="form-group row">
        <%= f.label :first_name, class: "col-sm-1 col-form-label" %>
        <div class="col-sm-2">
          <%= f.text_field :first_name, class: "form-control" %>
        </div>
      </div>

      <div class="form-group row">
        <%= f.label :last_name, class: "col-sm-1 col-form-label" %>
        <div class="col-sm-2">
          <%= f.text_field :last_name, class: "form-control" %>
        </div>
      </div>

      <div class="form-group row">
        <%= f.label :email, class: "col-sm-1 col-form-label" %>
        <div class="col-sm-2">
          <%= f.text_field :email, disabled: true, class: "form-control" %>
        </div>
      </div>

      <div class="py-5">
        <%= f.submit 'Update', class: 'btn btn-primary' %>
      </div>

    <% end %>
  </div>
  
</div>
