<h2 class="px-5 py-3">Workout</h2>

<div class="px-5 py-3">
  <p>Owner: <%= @workout.user.full_name %></p>
  <p>Name: <%= @workout.name %></p>
  <p>Description: <%= @workout.description %></p>
</div>

<div class="px-5">
  <b>Activities</b>
</div>
<div class="px-5 py-3">
  <table class="table table-striped table-bordered table-hover table-sm">
    <thead class="thead-dark">
      <tr>
        <th>Exercise</th>
        <th>Sets</th>
        <th>Reps</th>
        <th>Weight</th>
      </tr>
    </thead>
    <tbody>
    <% @workout.activities.each do |activity| %>
      <tr>
        <td><%= link_to activity.exercise.name, exercise_path(activity.exercise) %></td>
        <td><%= activity.sets %></td>
        <td><%= activity.reps %></td>
        <td><%= activity.weight %> lbs</td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>

<div class="px-5 py-3">
<% if @workout.user == @user %>
  <div class="btn-toolbar">
    <%= button_to 'Edit', edit_workout_path(@workout), method: :get, class: "mr-3" %>
    <%= button_to 'Delete', workout_path(@workout), method: :delete, class: "mr-3" %>
  </div>
<% end %>
</div>

<div class="px-5 py-3">
  <%= link_to 'All Workouts', workouts_path %>
</div>