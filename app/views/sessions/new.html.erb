<h2>Log In</h2>

<%= render partial: 'messages/flash_error' %>

<%= form_with url: sessions_path, local: true do %>

  <%= label_tag 'Email' %>
  <%= text_field_tag :email %>
  
  <br>

  <%= label_tag 'Password' %>
  <%= password_field_tag :password %>
  
  <br><br>

  <%= submit_tag 'Log In' %>

<% end %>

<p>Don't have an account? <%= link_to 'Sign up', signup_path %>.</p>
