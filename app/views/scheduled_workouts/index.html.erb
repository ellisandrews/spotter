<h2>Workout Schedule</h2>

<%= month_calendar(attribute: :date, events: @scheduled_workouts) do |date, scheduled_workouts| %>
  
  <%= date.day %>

  <% scheduled_workouts.each do |scheduled_workout| %>
    <% case scheduled_workout.completed %>
    <% when true %>
      <div><%= link_to scheduled_workout.workout.name, scheduled_workout_path(scheduled_workout), class: "text-success" %></div>
    <% when false %>
      <div><%= link_to scheduled_workout.workout.name, scheduled_workout_path(scheduled_workout), class: "text-danger" %></div>
    <% else %>
      <div><%= link_to scheduled_workout.workout.name, scheduled_workout_path(scheduled_workout), class: "text-info" %></div>
    <% end %>
  <% end %>

<% end %>

<%= button_to 'Schedule Workout', new_scheduled_workout_path, method: :get %>
